{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "useUnknownInCatchVariables": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@ai-recruitment-clerk/ai-services-shared": [
        "libs/ai-services-shared/src/index.ts"
      ],
      "@ai-recruitment-clerk/api-contracts": [
        "libs/api-contracts/src/index.ts"
      ],
      "@ai-recruitment-clerk/candidate-scoring-domain": [
        "libs/candidate-scoring-domain/src/index.ts"
      ],
      "@ai-recruitment-clerk/configuration": [
        "libs/configuration/src/index.ts"
      ],
      "@ai-recruitment-clerk/incentive-system-domain": [
        "libs/incentive-system-domain/src/index.ts"
      ],
      "@ai-recruitment-clerk/infrastructure-shared": [
        "libs/infrastructure-shared/src/index.ts"
      ],
      "@ai-recruitment-clerk/job-management-domain": [
        "libs/job-management-domain/src/index.ts"
      ],
      "@ai-recruitment-clerk/marketing-domain": [
        "libs/marketing-domain/src/index.ts"
      ],
      "@ai-recruitment-clerk/report-generation-domain": [
        "libs/report-generation-domain/src/index.ts"
      ],
      "@ai-recruitment-clerk/resume-dto": ["libs/resume-dto/src/index.ts"],
      "@ai-recruitment-clerk/resume-processing-domain": [
        "libs/resume-processing-domain/src/index.ts"
      ],
      "@ai-recruitment-clerk/service-base": ["libs/service-base/src/index.ts"],
      "@ai-recruitment-clerk/shared-dtos": ["libs/shared-dtos/src/index.ts"],
      "@ai-recruitment-clerk/shared-nats-client": [
        "libs/shared-nats-client/src/index.ts"
      ],
      "@ai-recruitment-clerk/types": ["libs/types/src/index.ts"],
      "@ai-recruitment-clerk/usage-management-domain": [
        "libs/usage-management-domain/src/index.ts"
      ],
      "@ai-recruitment-clerk/user-management-domain": [
        "libs/user-management-domain/src/index.ts"
      ],
      "@app/microservices-shared": ["libs/shared-nats-client/src/index.ts"],
      "@app/shared-dtos": ["libs/shared-dtos/src/index.ts"],
      "@app/shared-nats-client": ["libs/shared-nats-client/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
