{
  "name": "configuration",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/configuration/src",
  "projectType": "library",
  "tags": [
    "scope:shared",
    "layer:configuration",
    "owner:platform-governance"
  ],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/libs/configuration",
        "main": "libs/configuration/src/index.ts",
        "tsConfig": "libs/configuration/tsconfig.lib.json",
        "assets": [
          "libs/configuration/*.md"
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "libs/configuration/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "libs/configuration/jest.config.ts",
        "passWithNoTests": false
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  }
}
