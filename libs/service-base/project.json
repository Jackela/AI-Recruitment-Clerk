{
  "name": "service-base",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/service-base/src",
  "projectType": "library",
  "tags": ["scope:shared", "type:base"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc",
        "cwd": "libs/service-base"
      },
      "outputs": ["{projectRoot}/dist"],
      "configurations": {
        "production": {
          "command": "tsc --project tsconfig.json"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/service-base/**/*.ts"]
      }
    }
  }
}
