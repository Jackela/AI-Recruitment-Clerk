# Nx Cloud Configuration for Railway Deployment
# Optimize build performance with distributed caching

# Enable distributed build caching
NX_CLOUD_DISTRIBUTED_EXECUTION=true
NX_CLOUD_DISTRIBUTED_EXECUTION_STOP_AGENTS_ON_FAILURE=true

# Performance optimizations
NX_CLOUD_USE_VERBOSE_LOGGING=false
NX_CLOUD_LOG_LEVEL=warn

# Cache configuration
NX_CACHE_DIRECTORY=.nx/cache
NX_CLOUD_CACHE_TTL=168h

# Build optimization
NX_PARALLEL=3
NX_MAX_PARALLEL=3
NX_CLOUD_PARALLEL=true

# Memory optimization
NODE_OPTIONS=--max-old-space-size=2048