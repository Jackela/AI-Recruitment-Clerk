{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ai-recruitment-clerk/specs/001-audit-architecture/schemas/remediation.schema.json",
  "title": "Remediation Backlog",
  "type": "object",
  "required": ["remediations"],
  "properties": {
    "remediations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "findingId",
          "componentId",
          "severity",
          "owner",
          "status",
          "milestones",
          "verification"
        ],
        "properties": {
          "id": { "type": "string" },
          "findingId": { "type": "string" },
          "componentId": { "type": "string" },
          "severity": { "type": "string", "enum": ["high", "medium", "low"] },
          "owner": { "type": "string" },
          "dueDate": { "type": "string", "format": "date" },
          "status": {
            "type": "string",
            "enum": ["planned", "in-progress", "ready-for-validation", "verified", "blocked"]
          },
          "dependencies": {
            "type": "array",
            "items": { "type": "string" }
          },
          "milestones": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["name", "dueDate", "acceptanceCriteria"],
              "properties": {
                "name": { "type": "string" },
                "dueDate": { "type": "string", "format": "date" },
                "acceptanceCriteria": { "type": "string" }
              }
            }
          },
          "verification": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string" }
          },
          "notes": { "type": "string" }
        }
      }
    }
  }
}
