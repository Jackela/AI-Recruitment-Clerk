# AI招聘助手 - 环境变量配置模板
# 复制此文件为 .env 并填写实际配置值

# ===========================================
# 基础配置
# ===========================================
NODE_ENV=production
PORT=3000

# ===========================================
# 数据库配置
# ===========================================
# MongoDB连接字符串
MONGODB_URI=mongodb://localhost:27017/ai-recruitment-clerk
DATABASE_NAME=ai-recruitment-clerk

# MongoDB管理员密码 (用于Docker部署)
MONGODB_ROOT_PASSWORD=your_secure_mongodb_password_here

# ===========================================
# API配置
# ===========================================
# 前端域名
FRONTEND_URL=https://your-domain.com
# 后端API基础URL
API_BASE_URL=https://your-domain.com/api

# ===========================================
# 安全配置
# ===========================================
# JWT密钥 (32位字符，用于用户认证)
JWT_SECRET=your_super_secret_jwt_key_32_characters_long

# 数据加密密钥 (32位字符，用于敏感数据加密)
ENCRYPTION_KEY=another_32_character_encryption_key_here

# ===========================================
# 支付宝配置 (营销奖励功能)
# ===========================================
# 支付宝应用ID
ALIPAY_APP_ID=your_alipay_app_id_here

# 支付宝私钥
ALIPAY_PRIVATE_KEY=your_alipay_private_key_here

# ===========================================
# AI服务配置
# ===========================================
# Google Gemini API密钥
GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================
# 外部服务配置
# ===========================================
# 腾讯问卷URL (用于用户反馈收集)
QUESTIONNAIRE_URL=https://wj.qq.com/s2/your_questionnaire_id/

# ===========================================
# 消息队列配置 (NATS)
# ===========================================
NATS_URL=nats://localhost:4222

# ===========================================
# 缓存配置 (Redis，可选)
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# ===========================================
# 营销系统配置
# ===========================================
# 免费使用次数限制
FREE_USAGE_LIMIT=5
# 反馈码有效期 (天)
FEEDBACK_CODE_EXPIRY_DAYS=30
# 最小奖励金额 (元)
MIN_REWARD_AMOUNT=1
# 最大奖励金额 (元)
MAX_REWARD_AMOUNT=8