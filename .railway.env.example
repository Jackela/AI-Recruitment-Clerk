# Railway Environment Variables Template
# Copy this file to .railway.env and fill in your values

# Core Application
NODE_ENV=production
PORT=${{ RAILWAY_STATIC_PORT }}
FRONTEND_URL=${{ RAILWAY_STATIC_URL }}
API_BASE_URL=${{ RAILWAY_STATIC_URL }}/api

# Authentication & Security
JWT_SECRET=${{ JWT_SECRET }}
JWT_REFRESH_SECRET=${{ JWT_REFRESH_SECRET }}
ENCRYPTION_KEY=${{ ENCRYPTION_KEY }}
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_EXPIRES_IN_SECONDS=900
JWT_AUDIENCE=ai-recruitment-clerk
JWT_ISSUER=ai-recruitment-clerk-auth

# Database Configuration
MONGODB_URI=${{ MONGODB_URI }}
DATABASE_NAME=ai-recruitment-clerk

# Redis Configuration
REDIS_URL=${{ REDIS_URL }}
USE_REDIS_CACHE=true
DISABLE_REDIS=false
REDIS_CONNECTION_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000
CACHE_TTL=300
CACHE_MAX_ITEMS=1000
REDIS_FALLBACK_TO_MEMORY=true

# Message Queue
NATS_URL=${{ NATS_URL }}
NATS_OPTIONAL=true

# API Keys
GEMINI_API_KEY=${{ GEMINI_API_KEY }}

# Business Configuration
FREE_USAGE_LIMIT=5
FEEDBACK_CODE_EXPIRY_DAYS=30
MIN_REWARD_AMOUNT=1
MAX_REWARD_AMOUNT=8

# Performance
ENABLE_COMPRESSION=true
NODE_OPTIONS=--max-old-space-size=2048

# Monitoring
LOG_LEVEL=warn
ENABLE_REQUEST_LOGGING=false

# Health Check
HEALTH_CHECK_TIMEOUT=10000
HEALTH_CHECK_INTERVAL=30000